<div class="mt-3">
  <h1>Google Scrapping Results for <i>Tempotelecom</i></h1>

  <table class="table mt-5">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Link</th>
        <th scope="col">Date</th>
        <th scope="col">Processed at</th>
      </tr>
    </thead>

    <tbody>
      <% @scrap_results.each do |scrap_result| %>
        <tr>
          <td scope="row"><%= scrap_result.title %></td>
          <td><%= scrap_result.link %></td>
          <td><%= scrap_result.date %></td>
          <td><%= scrap_result.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row text-center justify-content-center mt-5">
    <div class="mx-auto mb-5">
      <%= link_to 'Scrap New Results (Background Job)', scrapper_google_search_path, class: 'btn btn-outline-primary' %>
      <%= link_to 'Remove Scrapped Results', scrapper_remove_all_path, class: 'btn btn-outline-danger' %>
      <%= link_to 'Main Screen', root_path, class: 'btn btn-link' %>
    </div>
  </div>
</div>
