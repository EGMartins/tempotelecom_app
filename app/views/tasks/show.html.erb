<div class="mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <%= t('tasks.show.task_name') %> <%= @task.name %>
      </h3>
    </div>
    <div class="card-body">
      <p class="card-text">
        <strong><%= t('tasks.show.description') %></strong>
        <%= @task.description %>
      </p>

      <p class="card-text">
        <strong><%= t('tasks.show.complete') %></strong>
        <%= @task.complete %>
      </p>
    </div>
  </div>

  <div class="mt-2">
    <%= link_to t('tasks.show.edit'), edit_task_path(@task), class: 'btn btn-outline-secondary' %> |
    <%= link_to t('tasks.show.back'), tasks_path, class: 'btn btn-link' %>
  </div>
</div>
